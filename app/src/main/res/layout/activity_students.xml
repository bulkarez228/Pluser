<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassesActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bloody_red">

        <CheckBox
            android:id="@+id/edit_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edit_done"
            android:button="@null"
            android:buttonTint="@color/white"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/title_activity_students" />

        <ImageView
            android:id="@+id/clear_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/sort_btn"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/sync" />

        <ImageView
            android:id="@+id/plus_one_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/edit_btn"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/plus_one" />

        <ImageView
            android:id="@+id/sort_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/sort_variant" />

        <ImageView
            android:id="@+id/add_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/plus"
            android:visibility="gone"
            />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/students"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar" />

    <TextView
        android:id="@+id/there_nothing_to_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="22sp"
        android:text="@string/there_nothing_to_see" />

</RelativeLayout>